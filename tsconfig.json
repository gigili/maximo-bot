{
	"compilerOptions": {
		"strict": true,
		"incremental": true,
		"target": "es6",
		"module": "commonjs",
		"outDir": "./build",
		"rootDir": "./",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true
	},
	"exclude": [
		"build",
		"node_modules",
		"migrations",
		".github",
		".idea"
	]
}
